<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.WhereToGoFirst" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.WhereToGoFirst" parent="Base.Theme.WhereToGoFirst"/>

    <style name="Theme.WhereToGoFirst.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TextTitle">
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBig">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="TextSmall">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextListBig">
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextListNormal">
        <item name="android:textAppearance">?attr/textAppearanceListItemSmall</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

</resources>