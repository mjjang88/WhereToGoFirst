<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.WhereToGoFirst" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
    </style>

    <style name="Theme.WhereToGoFirst" parent="Base.Theme.WhereToGoFirst"/>

    <style name="Theme.WhereToGoFirst.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TextTitle">
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBig">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="TextSmall">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextListBig">
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextListNormal">
        <item name="android:textAppearance">?attr/textAppearanceListItemSmall</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/margin_half</item>
        <item name="android:paddingRight">@dimen/margin_half</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:padding">@dimen/margin_half</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="SmallButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

</resources>