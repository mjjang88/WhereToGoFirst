<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_start_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_point"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            style="@style/TextBig"/>

        <LinearLayout
            android:id="@+id/layout_start_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/text_start_point" />

        <TextView
            android:id="@+id/text_via_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/via_point"
            app:layout_constraintTop_toBottomOf="@id/layout_start_point"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            style="@style/TextBig"/>

        <LinearLayout
            android:id="@+id/layout_via_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/text_via_point"/>

        <TextView
            android:id="@+id/text_dest_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dest_point"
            app:layout_constraintTop_toBottomOf="@id/layout_via_point"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            style="@style/TextBig"/>

        <LinearLayout
            android:id="@+id/layout_dest_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/text_dest_point"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_get_locate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_lotation"
            app:layout_constraintBottom_toTopOf="@id/btn_add_place"
            style="@style/Button"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/add_place"
            style="@style/Button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>